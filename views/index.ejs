<%- include('partials/header.ejs'); -%>

<div class="list-header">
    <h1>Welcome to my list of game notes and reviews</h1>
    <form action="/addGame">
        <button class="header-button" type="submit">+</button>
    </form>
</div>

<div class="container">
    <%for(let game of gameList){%>
        <div class="game-container">
            <a href="/<%=game.id%>" class="game-title"><%=game.name%></a>
            <p class="game-summary"><%=game.summary%></p>
            <p class="game-rating"><%=game.rating%></p>
            <img class="game-cover" src="<%=game.image_link%>>"/>
        </div>
    <%}%>
</div>

<%- include('partials/footer.ejs'); -%>